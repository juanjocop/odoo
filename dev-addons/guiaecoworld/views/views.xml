<odoo>
  <data>

    <!-- Tree Definition -->
    <record id="guiaecoworld_tree_view" model='ir.ui.view'>
      <field name="name">Tree Guia ecoWORLD</field>
      <field name="model">guiaeco.clientes</field>
      <field name="arch" type="xml">
        <tree>
              <field name="image_small" widget="image"/>
              <field name="partner_id"/>
              <field name="activo"/>
        </tree>
      </field>
    </record>

    <!-- Form Definition -->
    <record id="guiaecoworld_form_view" model='ir.ui.view'>
      <field name="name">Form Guia ecoWORLD</field>
      <field name="model">guiaeco.clientes</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="mode">primary</field>
      <field name="arch" type="xml">
        <field name="company_type" position="after">
          <field name="partner_id" placeholder="Elije empresa guia" required="True"/>
        </field>
        <!--<field name="parent_id" position="replace">
          <field name="parent_id" attrs="{'invisible': True}"/>
        </field>-->
        <notebook position="inside">
          <page string="Guia ecoWORLD">
            <group string="Datos Cliente">
              <field name="activo"/>
              <field name="especialidad"/>
              <field name="mapaG"/>
              <field name="mapaEmbed"/>
              <field name="fechaIncorporacion"/>
            </group>
            <group string="Opinion">
              <field name="calidadPresentacion"/>
              <field name="calidadTrato"/>
              <field name="calidadRecomienda"/>
              <field name="calidadBeneficios"/>
              <field name="calidadValora"/>
            </group>
            <group string="Imagen Publica">
              <field name="imagenPlaca"/>
              <field name="cabecera"/>
            </group>
          </page>
        </notebook>
      </field>
    </record>

    <!-- Action clientes -->
    <record id="guiaecoworld.action_window" model="ir.actions.act_window">
      <field name="name">Clientes</field>
      <field name="res_model">guiaeco.clientes</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Menus -->
    <!-- Top Menu -->
    <menuitem id="guiaecoworld.menu_root" name="Guía ecoWORLD" sequence="1"/>
    <!-- Menu Categorias -->
    <menuitem id="guiaecoworld.clientes" name="Clientes" sequence="1" parent="guiaecoworld.menu_root"/>
    <!-- Action Menu -->
    <menuitem id="guiaecoworld.clientes_lista" name="Clientes" sequence="1" parent="guiaecoworld.clientes" action="guiaecoworld.action_window"/>

    <!--Intentamos añadir al res.partner vista datos adicionales-->
    <record model="ir.ui.view" id="contactoeco_form_view_inherit">
      <field name="name">partner.contactoeco</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <field name="website" position="after">
          <field name="enlaceFacebook"/>
        </field>
        <field name="parent_id" position="after">
          <field name="referido" placeholder="Referido por:"/>
        </field>
        <notebook>
          <page string="Referidos">
            <field name="referidos" mode="kanban"/>
            <!--<kanban>
              <templates>
                <t t-name="kanban-box">
                  <div class="oe_kanban_vignette">
                    <img t-att-src="kanban_image('res.partner', 'image_medium', record.id.value)" class="oe_kanban_image"/>
                    <div class="oe_kanban_details">
                      <field name="name"/>
                    </div>
                  </div>
                </t>
              </templates>
            </kanban>-->
          </page>
        </notebook>
      </field>
    </record>

    <record model="ir.actions.act_window">
      <field name="name">Cliente</field>
      <field name="res_model">res.partner</field>
      <field name="view_mode">tree,form</field>
    </record>
  </data>
</odoo>
