<odoo>
  <data>

    <!-- Tree Definition -->
    <record id="guiaecoworld_tree_view" model='ir.ui.view'>
      <field name="name">Tree Guia ecoWORLD</field>
      <field name="model">guiaeco.clientes</field>
      <!-- <field name='inherit_id' ref="base.view_partner_tree" /> -->
      <field name="arch" type="xml">
        <!-- <field name="active" position="after"> -->
        <tree>
              <!--<field name="id_cliente" />-->
              <field name="activo"/>
              <field name="especialidad"/>
              <field name="mapaG"/>
              <field name="calidadPresentacion"/>
              <field name="calidadTrato"/>
              <field name="calidadRecomienda"/>
              <field name="calidadBeneficios"/>
              <field name="calidadValora"/>
              <field name="imagenPlaca"/>
              <field name="cabecera"/>
              <field name="enlaceWeb"/>
              <field name="enlaceFacebook"/>
              <field name="descripcion"/>
        </tree>
        <!-- </field> -->
      </field>
    </record>

    <!-- Form Definition -->
    <record id="guiaecoworld_form_view" model='ir.ui.view'>
      <field name="name">Form Guia ecoWORLD</field>
      <field name="model">guiaeco.clientes</field>
      <field name="arch" type="xml">
        <form string="Vista Form">
          <sheet>
              <field name="id_cliente" />
              <group>
                <field name="activo"/>
                <field name="especialidad"/>
                <field name="mapaG"/>
              </group>
              <group>
                <field name="calidadPresentacion"/>
                <field name="calidadTrato"/>
                <field name="calidadRecomienda"/>
                <field name="calidadBeneficios"/>
                <field name="calidadValora"/>
              </group>
              <group>
                <field name="imagenPlaca"/>
                <field name="cabecera"/>
              </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Action clientes -->
    <record id="guiaecoworld.action_window" model="ir.actions.act_window">
      <field name="name">Clientes</field>
      <field name="res_model">guiaeco.clientes</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Menus -->
    <!-- Top Menu -->
    <menuitem id="guiaecoworld.menu_root" name="GuÃ­a ecoWORLD" sequence="1"/>
    <!-- Menu Categorias -->
    <menuitem id="guiaecoworld.clientes" name="Clientes" sequence="1" parent="guiaecoworld.menu_root"/>
    <!-- Action Menu -->
    <menuitem id="guiaecoworld.clientes_lista" name="Clientes" sequence="1" parent="guiaecoworld.clientes" action="guiaecoworld.action_window"/>
  </data>
</odoo>
