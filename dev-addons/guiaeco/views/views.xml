<?xml version='1.0' encoding='utf-8'?>

<odoo>
  <!-- Form View -->
  <record id="guiaeco_clientes_form_view" model='ir.ui.view'>
    <field name="name">guiaeco.clientes.form.view</field>
    <field name="model">guiaeco.clientes</field>
    <field name="arch" type="xml">
      <form string="Form Clientes">
        <sheet>
          <group>
            <field name="idcliente"/>
            <field name="activo"/>
            <field name="imagenPlaca"/>
            <field name="cabecera"/>
            <field name="especialidad"/>
            <field name="mapaG"/>
            <field name="calidadPresentacion"/>
            <field name="calidadTrato"/>
            <field name="calidadRecomienda"/>
            <field name="calidadBeneficios"/>
            <field name="calidadValora"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Tree view -->
  <record id="guiaeco_clientes_tree_view" model='ir.ui.view'>
    <field name="name">guiaeco.clientes.tree.view</field>
    <field name="model">guiaeco.clientes</field>
    <field name="arch" type="xml">
      <form string="Tree Clientes">
        <sheet>
          <group>
            <field name="idcliente"/>
            <field name="activo"/>
            <field name="imagenPlaca"/>
            <field name="cabecera"/>
            <field name="especialidad"/>
            <field name="mapaG"/>
            <field name="calidadPresentacion"/>
            <field name="calidadTrato"/>
            <field name="calidadRecomienda"/>
            <field name="calidadBeneficios"/>
            <field name="calidadValora"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Action clientes -->
  <record id="action_guiaeco_clientes" model="ir.actions.act_window">
    <field name="name">Clientes</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">guiaeco.clientes</field>
    <field name="view_mode">tree,form</field>
  </record>

  <!-- Menus -->
  <menuitem id="guiaeco_menu_root" name="GuÃ­a ecoWORLD" sequence="1"/>
  <menuitem id="guiaeco_clientes_menu_category" name="Clientes" sequence="1" parent="guiaeco_menu_root"/>
  <menuitem id="action_guiaeco_clientes_menu" name="Clientes" sequence="1" parent="guiaeco_menu_root" action="action_guiaeco_clientes"/>
</odoo>
